<div class="container mt-5">
  <div class="col-md-12 mx-auto">
    <div class="row col-lg-8 justify-content-left">
      <h1><strong>Editing User Details of Admin</strong></h1>
    </div>
  </div>

  <div class="col-md-12 mt-5">
    <%= form_with model: [:admin, @user] do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><strong>User Name</strong></td>
            <td>
              <%= @user.name %>
            </td>
          </tr>
          <tr>
            <td><strong>Introduction</strong></td>
            <td>
              <%= @user.introduction %>
            </td>
          </tr>
          <tr>
            <td><strong>Target</strong></td>
            <td>
              <%= @user.target %>
            </td>
          </tr>
          <tr>
            <td><strong>Joined Day</strong></td>
            <td>
              <i class="far fa-clock"></i><%= @user.created_at.strftime("%Y.%m.%d") %>
            </td>
          </tr>
          <tr>
            <td><strong>User Status</strong></td>
            <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "available", { value: :true }  %>

              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "unavailable", { value: :false } %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "Save Changes", class: "btn btn-warning btn-sm mr-3" %>
              <%= link_to "Destroy", admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure really?' }, class: "btn btn-danger btn-sm mr-3" %>
              <%= link_to "Back", admin_users_path, class: "btn btn-secondary btn-sm mr-3" %>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>