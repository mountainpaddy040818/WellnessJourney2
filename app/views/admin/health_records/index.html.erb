<div class="container mt-5">
  <div class="col-md-12 mx-auto">
    <div class="row col-lg-8 justify-content-left">
      <h1><strong>All Records</strong></h1>
    </div>
  </div>

  <div class="col-md-12">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th></th>
          <th>Posted User</th>
          <th>Body Parts</th>
          <th>Posted Time</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @health_records.each do |health_record| %>
          <tr>
            <td>
              <%= image_tag health_record.user.get_profile_image, size: "30x30" %>
            </td>
            <td>
              <%= health_record.user.name %>
            </td>
            <td>
              <%= health_record.part %>
            </td>
            <td>
              <i class="far fa-clock"></i><%= health_record.created_at.strftime("%Y.%m.%d %H:%M:%S") %>
            </td>
            <td>
              <%= link_to "Edit", edit_admin_health_record_path(health_record.id), class: "btn btn-success btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center mt-5">
  <%= paginate @health_records, theme: 'twitter-bootstrap-4' %>
</div>