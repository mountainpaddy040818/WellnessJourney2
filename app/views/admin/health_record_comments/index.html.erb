<div class="container mt-5">
  <div class="col-md-12 mx-auto">
    <div class="row col-lg-8 justify-content-left">
      <h1><strong>All Comments</strong></h1>
    </div>
  </div>

  <div class="col-md-12 mt-5">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th><strong>Commented User</strong></th>
          <th><strong>Comment</strong></th>
          <th><strong>Commented Time</strong></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @health_record_comments.each do |health_record_comment| %>
          <tr>
            <td>
              <%= health_record_comment.user.name %>
            </td>
            <td>
              <%= health_record_comment.comment %>
            </td>
            <td>
              <i class="far fa-clock"></i><%= health_record_comment.created_at.strftime("%a %Y.%m.%d %H:%M") %>
            </td>
            <td>
              <%= link_to "Destroy", admin_health_record_comment_path(health_record_comment.id), method: :delete, data: { confirm: 'Are you sure really?' }, class: "btn btn-outline-danger btn-sm mr-3" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center mt-5">
  <%= paginate @health_record_comments, theme: 'twitter-bootstrap-4' %>
</div>