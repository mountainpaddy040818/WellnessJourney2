<div class="container mt-5">
  <div class="col-md-12 mx-auto">
    <div class="row col-lg-8 justify-content-left">
      <h1><strong>Genres List and Adding</strong></h1>
    </div>
  </div>
</div>

<div class="row justify-content-center mt-4">
  <div class="col-md-6">
    <%= form_with model: @genre, url: admin_genres_path, class: 'form-group' do |f| %>
      <%= f.label :name, "genre name", class: 'form-label' %>
      <div class="input-group mb-3">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Please input genre name.' %>
        <div class="input-group-append">
          <%= f.submit "create genre", class: 'btn btn-outline-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row justify-content-center mt-4">
  <div class="col-md-7">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th>Genre Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to 'edit', edit_admin_genre_path(genre), class: 'btn btn-outline-success btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center mt-5">
  <%= paginate @genres, theme: 'twitter-bootstrap-4' %>
</div>
