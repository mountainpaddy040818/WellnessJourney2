<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class: options[:class].presence || "btn btn-outline-secondary btn-sm" %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: options[:class].presence || "btn btn-outline-success btn-sm" %>
  <% end %>
<% end %>