<div class="container mt-5">
  <div class="col-md-12 mx-auto">
    <div class="row col-lg-8 justify-content-left">
      <% if @user.id == current_user.id %>
        <h2><strong>My page</strong></h2>
      <% else %>
        <h2><strong>User Details</strong></h2>
      <% end %>
    </div>
  </div>

  <div class="col-md-12 d-flex justify-content-center mr-5">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td><strong></strong></td>
          <td>
            <%= image_tag @user.get_profile_image, size: "200x200" %>
          </td>
        </tr>
        <tr>
          <td><strong>User Name</strong></td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td><strong>Introduction</strong></td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td><strong>Target</strong></td>
          <td><%= @user.target %></td>
        </tr>
        <tr>
          <td>Joined</td>
          <td>
            <i class="far fa-clock"></i><%= @user.created_at.strftime("%a %Y.%m.%d %H:%M") %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="mt-3 text-center mb-3">
    <% if @user == current_user %>
      <%= link_to "Edit", edit_user_path(@user.id), class: "btn btn-outline-success btn-sm mr-5" %>
      <%= link_to "Favorites", favorites_user_path, class: "btn btn-outline-dark btn-sm mr-1" %>
    <% elsif @user.name == "Guest User" %>
    <% end %>
    <% if @user != current_user %>
      <div id="relationship_<%= @user.id %>">
        <%= render "relationship" , user: @user %>
      </div>
    <% end %>
  </div>
  <div class="mt-3 text-center mb-3">
    <%= link_to "Back", users_path, class: "btn btn-outline-secondary btn-sm mr-4" %>
  </div>
</div>