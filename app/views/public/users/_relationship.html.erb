<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-outline-secondary btn-sm" %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-outline-success btn-sm" %>
  <% end %>
<% end %>