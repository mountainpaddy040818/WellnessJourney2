<div class="text-center mt-2">
  <% flash.each do |message_type, message| %>
    <div class="flash-message <%= message_type %>"><%= message %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>
</div>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <div class="col-12 text-danger mt-3">
    <%= render "public/shared/error_messages", resource: resource %>
  </div>

  <div class="container mt-4 mb-5">
    <div class="row">
      <div class="col-lg-3 offset-lg-1 col-md-4 offset-md-4 col-6 offset-3 text-center">
        <h2>Sign up</h2>
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <div class="field form-group">
      <div class="row justify-content-end">
        <div class="col-lg-2 offset-lg-2 flex-md-fill mt-2">
          <%= f.label :email %><br />
        </div>
        <div class="col-lg-7 offset-lg-1 flex-md-fill">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row justify-content-end">
        <div class="col-lg-2 offset-lg-2 flex-md-fill mt-2">
          <%= f.label :name %><br>
        </div>
        <div class="col-lg-7 offset-lg-1 flex-md-fill">
          <%= f.text_field :name, placeholder: "name", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row justify-content-end">
        <div clas="col-lg-2 offset-lg-2 flex-md-fill mt-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div class="col-lg-7 offset-lg-1 flex-md-fill">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="field form-group">
      <div class="row justify-content-end">
        <div class="col-lg-2 offset-lg-2 flex-md-fill mt-2">
          <%= f.label :password_confirmation %><br />
        </div>
        <div class="col-lg-7 offset-lg-1 flex-md-fill">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", 
          placeholder: "password_confirmation", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="actions col-lg-7 offset-lg-5 mt-3 mb-3">
        <%= f.submit "Sign up", class: "btn btn-outline-success btn-lg" %>
      </div>
    </div>
  </div>
<% end %>