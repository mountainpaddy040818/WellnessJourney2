<div class="container mt-5">
  <div class="col-md-12 mx-auto">
    <div class="row col-lg-8 justify-content-left">
      <h2><strong>Editing Record</strong></h2>
    </div>
  </div>
  <%= form_with model: @health_record, url: health_record_path, method: :patch do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td><strong>Body Parts</strong></td>
          <td><%= f.text_field :part, class: "form-control" %></td>
        </tr>
        <tr>
          <td><strong>Exercises</strong></td>
          <td><%= f.text_field :exercise, class: "form-control" %></td>
        </tr>
        <tr>
          <td><strong>Training Contents</strong></td>
          <td><%= f.text_field :training_content, class: "form-control" %></td>
        </tr>
        <tr>
          <td><strong>Diet Contents</strong></td>
          <td><%= f.text_area :diet_content, class: "form-control", rows: "5" %></td>
        </tr>
        <tr>
          <td><strong>Today's impressions</strong></td>
          <td><%= f.text_area :today_impression, class: "form-control", rows: "5" %></td>
        </tr>
        <tr>
          <td><strong>Tags</strong></td>
          <td>
            <label>" , " で区切ると複数タグ登録できます</label>
            <%= f.text_field :tag_name, value: @tag_list, class: 'form-control' %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="mt-3 text-center mb-3">
      <%= f.submit "Save Changes", class: "btn btn-warning btn-sm mr-3" %>
      <%= link_to "Destroy", @health_record, method: :delete,
        data: { confirm: 'Are you sure really?' },
        class: "btn btn-danger btn-sm mr-3" %>
      <%= link_to "Back", health_record_path(@health_record.id), class: "btn btn-secondary btn-sm mr-3" %>
    </div>
  <% end %>
</div>

