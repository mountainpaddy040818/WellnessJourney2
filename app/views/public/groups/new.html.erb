<div class="mt-2 text-danger">
  <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class='container mt-4'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Create Group</h2>
      <%= render 'public/groups/form', group: @group %>
    </div>
  </div>
</div>