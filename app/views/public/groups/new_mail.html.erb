<div class="mt-2 text-danger">
  <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class='container mt-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="mb-5">Event Mail</h2>
    <%= form_with url: group_send_mail_path(@group), method: :get, local: true do |f| %>
      <div class="form-group mb-5">
        <%= f.label :title %>
        <%= f.text_field :mail_title, class: 'form-control' %>
      </div>
      <div class="form-group mb-5">
        <%= f.label :content %>
        <%= f.text_area :mail_content, class: 'form-control' %>
      </div>
      <div class="text-right">
        <%= f.submit 'Send', class: "btn btn-sm btn-outline-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>